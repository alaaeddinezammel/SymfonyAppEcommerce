    <h3 style="color:#FF866A">Etat du Service</h3>                
    <p><h4 id="etat">{{b}}</h4> <button type="button" id="b2" class="btn btn-primary" name="add"><i class="fa fa-plus"></i>Consulter Reclamation</button></p>
    <br/>
                    <ul class="thumbnails gallery">


                    </ul>
                </div>

                <center>



                    <div class="span4">

                        <h3 style="color:#FF0000">Nom Service</h3>
                        <p><h4> {{a.nom}}</h4>
                        </p>

                    </div>
                    <div class="span4">
                        <h3 style="color:#FF0000">Categorie</h3>
                        <p><h4>{{a.categorie}}</h4></p>	

                    </div>
                    <div class="span4 ">

                        <h3 style="color:#FF0000">Description</h3>

                        <p><h4>{{a.description}}</h4></p>

