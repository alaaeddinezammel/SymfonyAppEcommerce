{% extends "::AdminLayout.html.twig" %}

{% block body %}
    <div>
        <ul class="breadcrumb">
            <li>
                <a href="#">Home</a> <span class="divider">/</span>
            </li>
            <li>
                <a href="#">Service</a>
            </li>
        </ul>
    </div>

    <div class="row-fluid sortable">		
        <div class="box span12">
            <div class="box-header well" data-original-title>
                <h2><i class="icon-user"></i> Service</h2>

            </div>
            <div class="box-content">
                <table class="table table-striped table-bordered bootstrap-datatable datatable">
                    <thead>
                        <tr>
                            <th>Nom</th>
                            <th>Categorie</th>
                            <th>Description</th>
                            <th>NOM FOURNISSEUR</th>
                            <th>Etat</th>
                            <th>Actions</th>
                        </tr>
                    </thead>   
                    <tbody>
                        {% for i in R %}
                            <tr>
                                <td>{{i.nom}}</td>
                                <td>{{i.categorie}}</td>
                                <td>{{i.description}}</td>
                                <td>{{i.idFournisseur.nom}}</td>
                                <td><span class="label label-success">Réclamé</span></td>
                                <td class="center">
                                    <a class="btn btn-success" href="{{path('view_service',{'id':i.id})}}">
                                        <i class="icon-zoom-in icon-white"></i>  
                                        View                                            
                                    </a>

                                    <a class="btn btn-danger" href="{{path('delete_service_admin',{'id':i.id})}}" onclick="return confirm('Etes vous sûre de vouloir supprimer ce Service ?');">
                                        <i class="icon-trash icon-white"></i> 
                                        Delete
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}

                        {% for i in N %}
                            <tr>
                                <td>{{i.nom}}</td>
                                <td>{{i.categorie}}</td>
                                <td>{{i.description}}</td>
                                <td>{{i.idFournisseur}}</td>
                                <td><span class="label label-success">Non réclamé</span></td>
                                <td class="center">
                                    <a class="btn btn-success" href="{{path('view_service',{'id':i.id})}}">
                                        <i class="icon-zoom-in icon-white"></i>  
                                        View                                            
                                    </a>

                                    <a class="btn btn-danger" href="{{path('delete_service_admin',{'id':i.id})}}" onclick="return confirm('Etes vous sûre de vouloir supprimer ce Service ?');">
                                        <i class="icon-trash icon-white"></i> 
                                        Delete
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}

                    </tbody>
                </table>  
                <div class="navigation">
                    {{ knp_pagination_render(page) }}
                </div>
               

            </div>
        </div><!--/span-->
    </div><!--/row-->   

    <!-- content ends -->
</div><!--/#content.span10-->
</div><!--/fluid-row-->

<hr>

<div class="modal hide fade" id="myModal">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">×</button>
        <h3>Settings</h3>
    </div>
    <div class="modal-body">
        <p>Here settings can be configured...</p>
    </div>
    <div class="modal-footer">
        <a href="#" class="btn" data-dismiss="modal">Close</a>
        <a href="#" class="btn btn-primary">Save changes</a>
    </div>
</div>
{% endblock %}

