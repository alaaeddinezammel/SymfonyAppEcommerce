<!DOCTYPE html>
{% set total = 0 %}
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <title>Facture</title>

        <style>
            h1 {
                position:absolute;
                color:#0088cc;
                font-size:50px;
            }

            .center {
                text-align:center;
            }

            .color {
                color:#0088cc;
            }

            .strong {
                font-weight:bold;
            }
            .min {
                font-size:10px;
            }

            img {
                position:absolute;
                top:80px;
                left:30px;
            }

            ul#coordonnes {
                float:left;
                margin-top:30px;
                margin-left:400px;
                list-style:none;
            }

            ul#coordonnes li {
                height:20px;
            }

            table#enTete {
                position:absolute;
                top:5px;
                right:330px;
                text-align:center;
            }

            table#enTete h1 {
                color:#0088cc;
                font-weight:bold;
                font-size:20px;
            }

            table#entity {
                float:left;
                margin-top:30px;
                text-align:center;
            }

            table#entity td {
                height:45px;
                border-bottom:1px solid #0088cc;
            }

            table#total {
                float:right;
                margin-left:495px;
                border-bottom:1px solid #0088cc;
                border-right:1px solid #0088cc;
                border-left:1px solid #0088cc;
            }

            table#total td {
                height:20px;
            }

            #footer { 
                position:absolute;
                bottom:0px;width:100%;
                text-align:center;
                line-height:25px;
            }
        </style>

    </head>
    <body>
        <h1>All For Deal</h1>
        <table id="enTete">
            <tr>
                <td colspan="1"></td>
                <td colspan="1"><h1>Facture</h1></td>
                <td colspan="1"></td>
            </tr>
            <tr>
                <td width="80">Page</td>
                <td width="100">Date</td>
                <td width="120">Ref</td>
            </tr>
            <tr>
                <td class="color">[[page_nb]]</td>
                <td class="color">{{ facture.date }}</td>
                <td class="color">{{ facture.id }}</td>
            </tr>
        </table>
        <ul id="coordonnes">
            <li>{{ facture.idConsommateur.prenom }} {{ facture.idConsommateur.nom }}</li>
            <li>{{ facture.idAdresse.adresse }}</li>
            <li>{{ facture.idAdresse.cp }} {{ facture.idAdresse.ville }} {{ facture.idAdresse.pays }}</li>
        </ul>
        <table id="entity">
            <tr>
                <td width="306">DESIGNATION</td>
                <td width="131">QUANTITE</td>
                <td width="126">P.U - TTC</td>
                <td width="131">MONTANT TTC</td>
            </tr>
            {% for ligneCmd in facture.lignesCmd %}
                <tr>
                    <td class="color">{{ ligneCmd.idProduit.id }}</td>
                    <td class="color">{{ ligneCmd.qte }}</td>
                    <td class="color">$ {{ ligneCmd.idProduit.prix }}</td>
                    <td class="color">$ {{ ligneCmd.idProduit.prix*ligneCmd.qte }}</td>
                </tr>
                {% set total = total + ligneCmd.idProduit.prix * ligneCmd.qte %}
            {% endfor %}
        </table>
        <table id="total">
            <tr>
                <td width="130">TOTAL TTC :</td>
                <td width="100" class="color">$ {{ total }}</td>
            </tr>
            <tr>
                <td width="130">Frais de livraison <span class="color min"></span> :</td>
                <td width="100" class="color">$ {{ facture.total - total }}</td>
            </tr>
            <tr>
                <td width="130">Total Ã  payer :</td>
                <td width="100" class="color">$ {{ facture.total }}</td>
            </tr>
        </table>
        <div id="footer">
            <span class="color strong">{{ adresse }}</span>
            <br />
            Tel: {{ telephone }}
            <br />
            Fax: {{ fax }}
        </div>
    </body>
</html>