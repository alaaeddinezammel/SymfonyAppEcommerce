                    </div>
                </div>

                <center>
                    <div class="span4">

                        <h3 style="color:#FF0000">Sujet</h3>
                        <p><h4> {{a.sujet}} </h4>
                        </p>

                    </div>
                    <div class="span4">
                        <h3 style="color:#FF0000">Message</h3>
                        <p><h4>{{a.message}}</h4></p>	

                    </div>
                    <div class="span4">
                        <h3 style="color:#FF0000">Date</h3>
                        <p><h4>{{a.date}}</h4></p>	

                    </div>
                    <div class="span4">
                        <h3 style="color:#FF0000">Reponse</h3>
                        <p><h4>{{a.reponse}}</h4></p>	
                    </div>
                </center>
            </div><!--/span-->

        </div><!--/row-->
    </div><!--/#content.span10-->
</div><!--/fluid-row-->

<hr>
{% endfor%}
{% endblock %}

{% block javascripts %}
    <script>
        $(document).ready(
                function ()
                {
                    
                    $("#b1").click(
                            function () {
                                $("#membre").show();
                                $("#b1").prop('disabled', true);
                                //	$("div").css({'font-size':'40px'});
                            }
                    );

                }
        );
        $(document).ready(
                function ()
                {
                    var seats = $("#etat").val();
                    if (seats == "Service Non réclamé")
                    {
                        $("#b2").hide();
                    }
                    else
                    {
                    $("#b2").click(
                            function () {
                                $("#reclamation").show();                               
                                //	$("div").css({'font-size':'40px'});
                            }
                    );
                    }
                }
        );
    </script>
{% endblock %}

